<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RadioButton
        android:id="@+id/radioButtonOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioButtonOption1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Option2" />

    <RadioButton
        android:id="@+id/radioButtonOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioButtonOption2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:text="Option1" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioButtonOption2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp" >

        <RadioButton
            android:id="@+id/radioSelection1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Selection1" />

        <RadioButton
            android:id="@+id/radioSelection2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selection2" />

        <RadioButton
            android:id="@+id/radioSelection3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selection3" />
        
        <RadioButton
            android:id="@+id/radioSelection4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selection4" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButtonOption1"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButtonOption2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="CheckBox" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/checkBox1"
        android:layout_alignTop="@+id/radioGroup1"
        android:layout_marginTop="18dp"
        android:text="ToggleButton" />

</RelativeLayout>
